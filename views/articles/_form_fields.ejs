<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" value = "<%= articles.title %>"" id="title" class="form-control mt-1" required/>
</div>
<div class="form-group mt-4">
    <label for="desc">Desciption</label>
    <textarea type="text" name="desc" id="desc" class="form-control mt-1" required><%= articles.description %></textarea>
</div>
<div class="form-group mt-4">
    <label for="mark">Markdown</label>
    <textarea name="mark" id="mark" class="form-control mt-1" required><%= articles.markdown %></textarea>
</div>
<a href="/" class="btn btn-secondary mt-4">Cancel</a>
<button class="btn btn-primary mt-4" type="submit">Save</button>